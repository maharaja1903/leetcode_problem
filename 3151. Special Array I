class Solution {
    public boolean isArraySpecial(int[] nums) {
        int len=nums.length;
        int i=0;
        while(i<len-1){
            if(nums[i]%2==0 &&nums[i+1]%2!=0){
                i++;
            }
            else if(nums[i]%2!=0 && nums[i+1]%2==0){
                i++;
            }else{
                return false;
            }
        }
        return true;
    }
}
